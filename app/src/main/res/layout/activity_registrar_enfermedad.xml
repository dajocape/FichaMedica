<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.edu.espol.ingsoft.fichamedica.activities.registrarEnfermedadActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar Enfermedad"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etEnfermedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enfermedad"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Codigo"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnGuardarEnfermedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnIr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir a crear diagnostico" />

        <Button
            android:id="@+id/btnIrDiagnosticos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir a Diagnosticos Creados" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
