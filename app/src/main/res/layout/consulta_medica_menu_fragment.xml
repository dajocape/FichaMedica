<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_signos_vitales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signos Vitales" />

        <Button
            android:id="@+id/btn_revision_medica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Revision Medica" />

        <Button
            android:id="@+id/btn_examen_fisico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Examen Fisico" />

        <Button
            android:id="@+id/btn_diagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagnostico" />

        <Button
            android:id="@+id/btn_prescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prescripcion" />

        <Button
            android:id="@+id/btn_permisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permiso Medico" />

        <Button
            android:id="@+id/btn_subir_archivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anexar Examenes e Imagenologia" />

        <Button
            android:id="@+id/btn_antecedentes_patologicos_personales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antecedentes Patologicos Personales" />

        <Button
            android:id="@+id/btn_antecedentes_patologicos_familiares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antecedentes Patologicos Familiares "/>

    </LinearLayout>
</ScrollView>