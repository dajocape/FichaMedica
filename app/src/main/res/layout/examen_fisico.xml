<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button-atras"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:text="atras"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/examen_fisico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_guardar"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="48dp"
        android:text="Guardar"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/examen_fisico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/examen_fisico"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:background="#8EAAFC"
        android:paddingLeft="25dp"
        android:paddingTop="7dp"
        android:text="Examen físico"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="143dp" />

    <EditText
        android:id="@+id/textRevision"
        android:layout_width="0dp"
        android:layout_height="238dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:inputType="textPersonName"
        android:paddingLeft="40px"
        android:text="Descripción del examen físico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/examen_fisico"
        tools:ignore="MissingConstraints" />



</android.support.constraint.ConstraintLayout>